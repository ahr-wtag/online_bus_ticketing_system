<table border="1">
<tr>
<th>Ticket Price</th>
<th>Date</th>
<th>Time</th>
<th>Bus</th>
<th>Route</th>
</tr>
<tr>
    <td><%=@trip.ticket_price%></td>
    <td><%=@trip.date%></td>
    <td><%=@trip.time.strftime("%I:%M %P")%></td>
    <td><%=@trip.bus.name%></td>
    <td><%=@trip.route.getFullRoute%></td>
</tr>
</table>

<br>

<%= form_with url:payment_path ,method: :post do |f| %>
   
   <%= f.hidden_field :bus_id,{:value => @trip.bus.id}  %>
   <%= f.hidden_field :trip_id,{:value => @trip.id}  %>
   <%= f.hidden_field :route_id,{:value => @trip.route.id}  %>
   <div>
      <div class="row row-cols-4">
    <%@seats.each.with_index do |seat,index|%>
        <div class="col d-flex flex-column align-itens-center align-items-center justify-content-center pb-2">
         <%=seat.number%><input class type="checkbox" <%= seat.booked ? "disabled" : "" %> name=<%=seat.id%>   id=<%=seat.id%> value=<%=seat.id%>> 
         </div>
        <% if (index+1)%4 == 0%>
        <br>
        <% end %>
    <%end%>
     
   </div>
   </div>
   <br>
      <%= f.submit "Book Seats" %>
<% end %>


