<h1>All Routes</h1>

<nav>
 <% if can? :manage, @rotues %>
   <%= link_to "Add Route", new_route_path%>
 <% end %>

</nav>
<br>

<table border="1">
<tr>
<th>ID</th>
<th>Source</th>
<th>destination</th>
<% if can? :manage, @routes %>
 <th colspan=2>Action</th>
<% end %>
</tr>
<% for route in @routes  do%>
<tr>
    <td><%=route.id%></td>
    <td><%=route.origin%></td>
    <td><%=route.destination%></td>
    <% if can? :manage, @routes %>
  <td><%= link_to "Edit", edit_route_path(route) %></td>
    <td><%= link_to "Delete", route_path(route),data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
        }%></td>
 <% end %>
   

</tr>
<%end%>
</table>