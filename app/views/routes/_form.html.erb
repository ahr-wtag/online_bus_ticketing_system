<%= form_with model: @route do |form| %>
  <div>
    <%= form.label :origin %><br>
    <%= form.text_field :origin,{class: 'form-control'} %>
    <% @route.errors.full_messages_for(:origin).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :destination %><br>
    <%= form.text_field :destination ,{class: 'form-control'}%><br>
    <% @route.errors.full_messages_for(:destination).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.submit "Add Route",{class: "btn btn-primary" }%>
  </div>
<% end %>